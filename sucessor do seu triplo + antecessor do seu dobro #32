Var
   N,X,Y,Z: inteiro
   

Inicio
      Escreva("Digite um número: ")
      Leia(N)
      X <- (N*3)+1)
      Y <- (N*2)-1)
      Z <- (X+Y)
      Escreva("O resultado da soma é ",Z)

      




